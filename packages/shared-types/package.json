{
  "name": "@domofix/shared-types",
  "version": "0.1.0",
  "description": "Shared TypeScript types for the Domofix monorepo",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "commonjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit"
  },
  "keywords": ["types", "typescript", "shared"],
  "author": "Domofix Team",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.0.0",
    "rimraf": "^5.0.0"
  },
  "files": [
    "dist/**/*"
  ]
}