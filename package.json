{
  "name": "darigo-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@darigo/frontend",
    "dev:frontend": "npm run dev --workspace=@darigo/frontend",
    "dev:backend": "npm run start:dev --workspace=@darigo/backend",
    "build": "npm run build --workspaces --if-present",
    "build:frontend": "npm run build --workspace=@darigo/frontend",
    "build:backend": "npm run build --workspace=@darigo/backend",
    "test": "npm run test --workspaces --if-present",
    "test:frontend": "npm run test --workspace=@darigo/frontend",
    "test:backend": "npm run test --workspace=@darigo/backend",
    "lint": "npm run lint --workspaces --if-present",
    "type-check": "npm run type-check --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "install:all": "npm install"
  },
  "devDependencies": {
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
